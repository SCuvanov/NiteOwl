<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relation_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/view_layer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/white_background_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10" >

        <com.parse.ParseImageView
            android:id="@+id/imageViewRow"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_content_picture_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_name_row"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:singleLine="true"
                    android:tag="bold"
                    android:text="TITLE"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/tex_size_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_desc_row"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="DESCRIPTION"
                    android:textColor="@color/gray_79"
                    android:textSize="@dimen/tex_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_date_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:text="DATE"
                    android:textColor="@color/gray_35"
                    android:textSize="@dimen/tex_size_small" />

                <TextView
                    android:id="@+id/text_time_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:text="DATE"
                    android:textColor="@color/gray_35"
                    android:textSize="@dimen/tex_size_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>