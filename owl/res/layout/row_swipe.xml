<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relation_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

    <LinearLayout
            android:id="@+id/view_layer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:padding="@dimen/dim_10">

        <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_10"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/brave"/>

        <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:tag="bold"
                    android:text="@string/txt_some_title"
                    android:textColor="@color/gray_35"
                    android:textSize="@dimen/tex_size_normal"
                    android:textStyle="bold"/>


            <TextView
                    android:id="@+id/text_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="3"
                    android:text="@string/txt_some_longtext"
                    android:textColor="@color/gray_79"
                    android:textSize="@dimen/tex_size_small"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>