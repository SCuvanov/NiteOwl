<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relation_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lightgreybackgroundrepeat"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ab_height"
        android:background="@drawable/selectable_background_actionbar" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/text_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:tag="bold"
                android:text="@string/app_id"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xxxlarge"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="@dimen/dim_1"
                android:layout_height="fill_parent"
                android:background="@color/gray_35" >
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="@dimen/width"
                android:layout_height="fill_parent"
                android:background="@drawable/selectable_background_actionbar"
                android:contentDescription="@string/desc"
                android:src="@drawable/ico_settings" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_1"
        android:background="@color/gray_35" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_layer2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/lightgreybackgroundrepeat"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view_layer1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_simple"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10" >

                <com.facebook.widget.ProfilePictureView
                    android:id="@+id/userProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    facebook:preset_size="normal" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/btn_friends"
                            android:layout_width="@dimen/width"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/ico_friends" />

                        <ImageButton
                            android:id="@+id/btn_something"
                            android:layout_width="@dimen/width"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/ico_friends" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/ui_button_gray"
                        android:text="Edit Profile"
                        android:textColor="@color/gray_35" 
                        android:textSize="@dimen/tex_size_normal"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim_50"
                    android:layout_margin="5dp"
                    android:background="@drawable/ui_button_white"
                    android:gravity="center"
                    android:text="Sign Out"
                    android:textColor="@color/purple"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/link_facebook_button"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim_50"
                    android:layout_margin="5dp"
                    android:background="@drawable/ui_button_facebook"
                    android:gravity="center"
                    android:text="Link Facebook"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>