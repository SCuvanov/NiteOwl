<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relation_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lightgreybackgroundrepeat"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ab_height"
        android:background="@drawable/selectable_background_actionbar" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/userbanner" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_1"
        android:background="@color/gray_35" >
    </LinearLayout>

    <Button
        android:id="@+id/facebook_button_log_out"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim_50"
        android:layout_margin="5dp"
        android:background="@drawable/facebook_background"
        android:gravity="center"
        android:text="Sign Out"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/view_layer2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/lightgreybackgroundrepeat"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/white_background_simple"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view_layer1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10" >

                <QuickContactBadge
                    android:id="@+id/quickContactBadge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:tag="bold"
                        android:text="@string/txt_some_title"
                        android:textColor="@color/gray_35"
                        android:textSize="@dimen/tex_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_tagline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="3"
                        android:text="@string/txt_some_longtext"
                        android:textColor="@color/gray_79"
                        android:textSize="@dimen/tex_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:layout_width="@dimen/dim_1"
                        android:layout_height="fill_parent"
                        android:background="@color/gray_189" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/btn_settings"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/transparent_background_selector"
                            android:src="@drawable/ico_settings_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_1"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_189" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp" >

                <Button
                    android:id="@+id/btn_friends"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_background_selector"
                    android:text="Friends"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="@dimen/dim_1"
                    android:layout_height="fill_parent"
                    android:background="@color/gray_189" >
                </LinearLayout>

                <Button
                    android:id="@+id/btn_followers"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_background_selector"
                    android:text="Followers"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/facebook_sync_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_50"
                android:layout_margin="5dp"
                android:background="@drawable/facebook_background"
                android:gravity="center"
                android:text="Link with Facebook"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_1"
            android:background="@color/black" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>